<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sampul"
        android:layout_width="92dp"
        android:layout_height="120dp"
        android:padding="17dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="17dp">

            <TableRow>
                <TextView
                    android:id="@+id/judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/penulis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penulis"
                    android:textSize="13sp"
                    android:textColor="@color/grey"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/tv_stok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Stok  :"
            android:textSize="13sp"
            android:textColor="@color/grey"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/stok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_stok"
            android:text="0"
            android:textSize="13sp"
            android:textColor="@color/grey"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@drawable/rounded_square_ul">

            <TextView
                android:id="@+id/idRak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:drawableLeft="@drawable/ic_rakimg"
                android:drawablePadding="5sp"/>

            <TextView
                android:id="@+id/idSekat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="13sp"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
</android.support.v7.widget.CardView>